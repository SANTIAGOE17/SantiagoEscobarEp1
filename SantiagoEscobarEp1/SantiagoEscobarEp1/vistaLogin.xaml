<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SantiagoEscobarEp1.vistaLogin">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="" />
            <Label Text=" LOGIN " HorizontalTextAlignment="Center" FontSize="25" TextColor="Olive"/>
            <Label Text=" EXAMEN EP1" HorizontalTextAlignment="Center" FontSize="25" TextColor="Blue"/>
            <Label Text="" />

            <Image Source="LOGO_UISRAEL.png"/>

            <Entry x:Name="txtUsuario" Placeholder=" Ingrese Usuario" HorizontalTextAlignment="Center" FontSize="20" TextColor="Blue"/>
            <Entry x:Name="txtPassword" IsPassword="True" Placeholder=" Ingrese Password" HorizontalTextAlignment="Center" TextColor="Blue"/>

            <Button x:Name="btnAbrir" Clicked="btnAbrir_Clicked" Text="Ingresar" 
                    BackgroundColor="Olive" TextColor="#fff" FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>